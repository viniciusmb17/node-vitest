{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["standard-with-typescript", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "printWidth": 80,
        "tabWidth": 2,
        "singleQuote": true,
        "trailingComma": "all",
        "arrowParens": "always",
        "semi": false,
        "endOfLine": "auto"
      }
    ],
    "no-useless-constructor": "off",
    "@typescript-eslint/explicit-function-return-type": "off"
  },
  "settings": {
    "import/parsers": {
      "[require.resolve('@typescript-eslint/parser')]": [".ts", ".tsx", ".d.ts"]
    }
  }
}
